<p id="notice"><%= notice %></p>

<h1>For Women</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @for_women.each do |for_woman| %>
      <tr>
        <td><%= image_tag for_woman.womanavtr.thumb.url %></td>
        <td><%= for_woman.name %></td>
        <td><%= for_woman.description %></td>
        <td><%= link_to 'Просмотр', for_woman, class: "alert alert-info" %></td>
        <td><%= link_to 'Редактировани', edit_for_woman_path(for_woman), class: "alert alert-warning" %></td>
        <td><%= link_to 'Удалить', for_woman, method: :delete, class: "alert alert-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div style="background-position:center; position: center", class="with-delay">
  <%= link_to 'Создать Новое Мужское', new_for_woman_path, class: "btn btn-mini btn-warning", type: "button"%>
</div>