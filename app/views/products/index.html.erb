<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Наименование</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.thumb.url %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Просмотр', product %></td>
        <td><%= link_to 'Редактировать', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<strong><%= link_to 'Создать', new_product_path %></strong>
