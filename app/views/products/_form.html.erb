<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <br>
    <%= form.label :image, "Загрузить картинку"%><br>
    <button class="favth-btn">
      <%= form.file_field :image, class: "btn btn-large btn-primary" %>
      <% if form.object.image? %>
        <%= image_tag form.object.image.thumb.url %>

        <%= form.label :remove_image %>
        <%= form.check_box :remove_image %>
      <% end %>
    </button >
  </div>



  <div class="field">
    <%= form.label :Наименование_товара %>
    <%= form.text_field :name, id: :Product_name %>
  </div>

  <div class="field">
    <%= form.label :Описание %>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="actions">
    <%= form.submit "✔" %>
  </div>
<% end %>
