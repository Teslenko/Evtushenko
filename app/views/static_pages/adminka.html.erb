<h1>Режим Редактирования Продукции</h1>
<br><br><br>
<hr>
<button style="background-position:center; position: center", class="with-delay">
  <%= link_to 'Назад', :back, class: "btn btn-mini btn-info", type: "button" %>
</button>

<br><br>

<h1 style="color: rgba(161,161,32,0.68)">Редактирования Новостей</h1>
<br>
<table>
  <thead>
  <tr>
    <th></th>
    <th>Наименование</th>
    <th>Описание</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>

  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.image.thumb.url %></td>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= link_to 'Просмотр', product, class: "alert alert-info" %></td>
      <td><%= link_to 'Редактировать', edit_product_path(product), class: "alert alert-warning" %></td>
      <td><%= link_to 'Удалить', product, method: :delete, class: "alert alert-danger", data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<div class="1 navbar-nav pull-xs-rigth">
  <strong><%= link_to 'Создать Новости', new_product_path, class: "btn btn-mini btn-warning", type: "button" %></strong>
</div>



